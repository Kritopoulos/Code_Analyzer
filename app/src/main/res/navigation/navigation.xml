<!-- Note that the animations may show red in Android Studio;
     however, they are present and working perfectly fine. -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/entryFragment">


    <fragment
        android:id="@+id/entryFragment"
        android:name="com.example.codeanalyzer.entryFragment.EntryFragment"
        android:label="entry"
        tools:layout="@layout/fragment_entry">
        <action
            android:id="@+id/entry_to_user"
            app:destination="@id/userFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.codeanalyzer.user.UserFragment"
        android:label="user"
        tools:layout="@layout/fragment_user">
        <argument
            android:name="repoName"
            android:defaultValue="give a name"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/user_to_branch"
            app:destination="@id/branchesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/branchesFragment"
        android:name="com.example.codeanalyzer.branch.BranchFragment"
        android:label="user"
        app:popUpTo="@id/userFragment"
        tools:layout="@layout/fragment_branch" />

</navigation>
